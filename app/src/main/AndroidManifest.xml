<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.sample.memoryleaks">

    <application
        android:name="ua.sample.memoryleaks.MemoryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="ua.sample.memoryleaks.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ua.sample.memoryleaks.ListenerLeakedActivity" />
        <activity
            android:name="ua.sample.memoryleaks.ThreadLeakActivity"
            android:label="@string/title_activity_thread_leak"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="ua.sample.memoryleaks.BitmapLeakedActivity"
            android:label="@string/title_activity_bitmap_leaked"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="ua.sample.memoryleaks.ThirdLeakActivity"
            android:label="@string/title_activity_third_leak"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
